<h1>Blogs#edit</h1>
<p>Find me in app/views/blogs/edit.html.erb</p>

<%= form_for @blog do |f| %>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
    <br>
    <%= f.label :image, "Upload an image" %>
    <%= f.file_field :image %>
    <br>
    <%= f.submit "Update Blog" %>
<% end %>